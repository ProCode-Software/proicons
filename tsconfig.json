{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"target": "ES2022",
		"jsx": "react",
		"strictNullChecks": false,
		"strictFunctionTypes": false,
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"pretty": true,
		"removeComments": true,
		"declarationDir": "./lib",
	},
	"exclude": ["node_modules", "**/node_modules/*"]
}

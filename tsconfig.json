{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "target": "ES6",
        "jsx": "react",
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "pretty": true,
        "declarationDir": "./_lib",
        "moduleDetection": "force",
        // Emit only declarations
        "emitDeclarationOnly": true,
        // Lint
        "strictNullChecks": false,
        "strictFunctionTypes": false,
        "strict": false,
        "noUnusedParameters": false
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "**/BuildIconList/*",
    ]
}
{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "lib": ["ESNext", "DOM"],
        "target": "ES6",
        "jsx": "react",
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "pretty": true,
        "declarationDir": "./lib",
        "isolatedDeclarations": false,
        "moduleDetection": "force",
        "allowJs": true,

        // Emit only declarations
        "emitDeclarationOnly": true,

        // Lint
        "strictNullChecks": false,
        "strictFunctionTypes": false,
        "strict": false,
        "noUnusedParameters": false
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/node_modules/*", "**/BuildIconList/*"]
}

{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "moduleResolution": "NodeNext",
        "module": "ESNext",
        "lib": [ "ESNext" ],
        "rootDir": ".",
        "types": ["@types/bun"],
        "declaration": false,
        "allowJs": true,
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "rewriteRelativeImportExtensions": true
    },
    "include": [
        "./tools",
        "./bin",
        "**/bin"
    ],
    "exclude": [
        "node_modules",
        "**/BuildIconList/*",
    ]
}